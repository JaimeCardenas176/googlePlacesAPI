<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorAccent">

        <TextView
            android:id="@+id/fechaForecast"
            android:layout_width="240dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fotoForecast"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="@+id/fechaForecast"
            app:layout_constraintTop_toBottomOf="@+id/estadoF" />

        <ImageView
            android:id="@+id/iconMaxForecast"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_thermometer_max"
            app:layout_constraintStart_toEndOf="@+id/fotoForecast"
            app:layout_constraintTop_toBottomOf="@+id/estadoF" />

        <ImageView
            android:id="@+id/iconMinforecast"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/fotoForecast"
            app:layout_constraintTop_toBottomOf="@+id/iconMaxForecast"
            android:src="@drawable/ic_thermometer_min" />

        <TextView
            android:id="@+id/maximaForecast"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="24dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/iconMaxForecast"
            app:layout_constraintTop_toTopOf="@+id/iconMaxForecast" />

        <TextView
            android:id="@+id/minimaForecast"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="24dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/iconMinforecast"
            app:layout_constraintTop_toTopOf="@+id/iconMinforecast" />

        <TextView
            android:id="@+id/humedad"
            android:layout_width="47dp"
            android:layout_height="33dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toEndOf="@+id/minimaForecast"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/estadoF"
            android:layout_width="240dp"
            android:layout_height="16dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/fechaForecast"
            app:layout_constraintTop_toBottomOf="@+id/fechaForecast" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/maximaForecast"
            app:layout_constraintTop_toTopOf="@+id/maximaForecast"
            app:srcCompat="@drawable/ic_humidity" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
